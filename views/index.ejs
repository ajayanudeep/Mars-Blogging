<html lang="en">
<%- include('./partials/header.ejs') %>
<body>
    <%- include('./partials/navbar.ejs') %>
    <div class="content">
        <h1 class="Header">Blogs</h1>
        <div class="all-blogs">
            <% blogs.forEach( blog => { %>
                <div class="blog">
                    <div class="blog-header">
                        <h1><%= blog.title %></h1>
                        <p><%= blog.createdAt.getHours() %>:<%= blog.createdAt.getMinutes() %>:<%= blog.createdAt.getSeconds() %>|<%= blog.createdAt.getDate() %>/<%= blog.createdAt.getMonth() + 1 %>/<%= blog.createdAt.getFullYear() %></p>
                    </div>
                    <p><%= blog.content.substring(0,200) %> <a href="/<%= blog._id %>">Click Here to Read</a></p>
                </div>
            <% }); %>
        </div>
    </div>
</body>
</html>